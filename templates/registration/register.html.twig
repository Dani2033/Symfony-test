{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Password',
                'attr': {'class': 'form-control my-3'}
            }) }}
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input mx-3'}}) }}

            <button type="submit" class="btn btn-primary my-3">Register</button>
        {{ form_end(registrationForm) }}

        <h3><a href="{{ path('app_login') }}" class="">Or log in here</a></h3>
    </div>
    
{% endblock %}
