{% extends 'base.html.twig' %}

{% block body %}

    <div class="container text-center mt-5">
        <h1>Welcome to Symfony-test</h1>
        <p class="lead">Choose an option below to get started</p>
        {% if not app.user %}
            <div class="d-flex justify-content-center gap-3 mt-4">
                <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">Login</a>
                <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg">Register</a>
            </div>
        {% endif %}
        {% if app.user %}
            <div class="d-flex justify-content-center gap-3 mt-4">
                <a href="{{ path('app_logout') }}" class="btn btn-warning btn-lg">Logout</a>
            </div>
        {% endif %}
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="{{ path('reservation_form') }}" class="btn btn-success btn-lg">Create Reservation</a>
            <a href="{{ path('guest_list') }}" class="btn btn-success btn-lg">Guest List</a>
            <a href="{{ path('reservation_list') }}" class="btn btn-success btn-lg">Reservation List</a>
        </div>
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="/api" class="btn btn-success btn-lg">Api</a>
        </div>
    </div>


{% endblock %}